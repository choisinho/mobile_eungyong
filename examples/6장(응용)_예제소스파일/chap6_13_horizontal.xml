<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical">

   <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가로 스크롤뷰 1"
        android:gravity="center"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="30dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@android:color/holo_blue_dark">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="버튼 1" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="버튼 2" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="버튼 3" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="버튼 4" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="버튼 5" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="버튼 6" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="버튼 7" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="버튼 8" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="버튼 9" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="버튼 10" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="버튼 11" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="버튼 12" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="버튼 13" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="버튼 14" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="버튼 15" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="버튼 16" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가로 스크롤뷰 2"
        android:gravity="center"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@android:color/holo_blue_dark">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/cupcake"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/donut"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/eclair"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/froyo"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/gingerbread"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/honeycomb"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icecream"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/jellybean"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/kitkat"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/lollipop"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/marshmallow"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/nougat"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/oreo"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>