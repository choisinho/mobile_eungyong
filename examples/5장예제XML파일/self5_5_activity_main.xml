<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:rowCount="9"
    android:layout_margin="30dp"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="5"
        android:hint="숫자1"
        android:id="@+id/Edit1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="5"
        android:hint="숫자2"
        android:id="@+id/Edit2"/>
    <Button
        android:layout_width="70dp"
        android:text="0"
        android:layout_column="0"
        android:layout_row="2"
        android:id="@+id/Btn0"/>
    <Button
        android:layout_width="70dp"
        android:text="1"
        android:layout_column="1"
        android:layout_row="2"
        android:id="@+id/Btn1"/>
    <Button
        android:layout_width="70dp"
        android:text="2"
        android:layout_column="2"
        android:layout_row="2"
        android:id="@+id/Btn2"/>
    <Button
        android:layout_width="70dp"
        android:text="3"
        android:layout_column="3"
        android:layout_row="2"
        android:id="@+id/Btn3"/>
    <Button
        android:layout_width="70dp"
        android:text="4"
        android:layout_column="4"
        android:layout_row="2"
        android:id="@+id/Btn4"/>
    <Button
        android:layout_width="70dp"
        android:text="5"
        android:layout_column="0"
        android:layout_row="3"
        android:id="@+id/Btn5"/>
    <Button
        android:layout_width="70dp"
        android:text="6"
        android:layout_column="1"
        android:layout_row="3"
        android:id="@+id/Btn6"/>
    <Button
        android:layout_width="70dp"
        android:text="7"
        android:layout_column="2"
        android:layout_row="3"
        android:id="@+id/Btn7"/>
    <Button
        android:layout_width="70dp"
        android:text="8"
        android:layout_column="3"
        android:layout_row="3"
        android:id="@+id/Btn8"/>
    <Button
        android:layout_width="70dp"
        android:text="9"
        android:layout_column="4"
        android:layout_row="3"
        android:id="@+id/Btn9"/>
    <Button
        android:layout_width="match_parent"
        android:text="더하기"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:id="@+id/Add"/>
    <Button
        android:layout_width="match_parent"
        android:text="빼기"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:id="@+id/Sub"/>
    <Button
        android:layout_width="match_parent"
        android:text="곱하기"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:id="@+id/Mul"/>
    <Button
        android:layout_width="match_parent"
        android:text="나누기"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:id="@+id/Div"/>
    <TextView
        android:layout_width="match_parent"
        android:text="계산 결과 :"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:id="@+id/Result"
        android:textColor="#ff0000"
        android:textSize="25dp"/>

</GridLayout>